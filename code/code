

```python
# -- coding: utf-8 --
import RPi.GPIO as GPIO
import time
from RPLCD.i2c import CharLCD

lcd = CharLCD(i2c_expander='PCF8574', address=0x3f, port=1, cols=16, rows=2, dotsize=8)

GPIO_TRIGGER = 17
GPIO_ECHO = 18
BUZZER = 23

GPIO.setmode(GPIO.BCM)
GPIO.setup(GPIO_TRIGGER, GPIO.OUT)
GPIO.setup(GPIO_ECHO, GPIO.IN)
GPIO.setup(BUZZER, GPIO.OUT)
GPIO.output(BUZZER, GPIO.LOW)

def get_distance():
    GPIO.output(GPIO_TRIGGER, True)
    time.sleep(0.00001)
    GPIO.output(GPIO_TRIGGER, False)
    start_time = time.time()
    stop_time = time.time()
    while GPIO.input(GPIO_ECHO) == 0:
        start_time = time.time()
    while GPIO.input(GPIO_ECHO) == 1:
        stop_time = time.time()
    time_elapsed = stop_time - start_time
    distance = (time_elapsed * 34300) / 2
    return distance

try:
    lcd.clear()
    lcd.write_string("System Initializing")
    time.sleep(2)
    while True:
        dist = get_distance()
        lcd.clear()
        lcd.write_string("Distance:")
        lcd.crlf()
        lcd.write_string(f"{dist:.1f} cm")

        if dist < 10:
            GPIO.output(BUZZER, GPIO.HIGH)
            lcd.clear()
            lcd.write_string("Warning!")
            lcd.crlf()
            lcd.write_string(f"Obj: {dist:.1f} cm")
        else:
            GPIO.output(BUZZER, GPIO.LOW)

        time.sleep(0.5)

except KeyboardInterrupt:
    lcd.clear()
    lcd.write_string("Goodbye!")
    GPIO.output(BUZZER, GPIO.LOW)
    GPIO.cleanup()
